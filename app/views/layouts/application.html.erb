<!DOCTYPE html>
<html>
  <head>
    <title>Viva Bonito MS</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <style>
      form {
        color: #636363 !important;
        font-size: medium !important;
      }
      table {
        color: #636363 !important;
        font-size: small !important;
      }
      #passeios-rodape {
        color: #919191 !important;
        font-size: small !important;
      }
      a:link { color: #919191 !important; }
      a:hover { color: #ffffff !important; }
      a:visited { color: #636363 !important; }
    </style>

  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#" style="color: #ffffff !important;">
                  Viva Bonito MS - Simplificando os preços de Bonito MS para você!
                </a>
            </div>
        </div>
    </nav>

    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" style="height:300px">
      <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1" class=""></li>
        <li data-target="#carousel-example-generic" data-slide-to="2" class=""></li>
        <li data-target="#carousel-example-generic" data-slide-to="3" class=""></li>
      </ol>
      <div class="carousel-inner" role="listbox">
        <div class="item active" style="height:300px; background-image: url(<%=image_path('passeio-bonito-ms-flutuacao-nascente-azul.png')%>); background-position: center;">
          <img src="<%=image_path('clear.png')%>">
        </div>
        <div class="item" style="height:300px; background-image: url(<%=image_path('passeio-bonito-ms-boia-cross-parque-ecologico-rio-formoso.png')%>); background-position: center;">
          <img src="<%=image_path('clear.png')%>">
        </div>
        <div class="item" style="height:300px; background-image: url(<%=image_path('passeio-bonito-ms-mergulho-com-cilindro-lagoa-misteriosa.png')%>); background-position: center;">
          <img src="<%=image_path('clear.png')%>">
        </div>
        <div class="item" style="height:300px; background-image: url(<%=image_path('passeio-bonito-ms-cachoeira-boca-da-onca.png')%>); background-position: center;">
          <img src="<%=image_path('clear.png')%>">
        </div>
      </div>
      <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <div class="container" style="min-height:500px;width:60%;">
      <%= yield %>
    </div>
    <br/>
    <br/>

    <footer class="navbar navbar-inverse">
      <br/>
      <br/>
      <div class="row" style="align: center">
        <table id="passeios-rodape" style="margin: auto;width:100%">
          <tr>
            <th style="width: 16.5%;"></th>
            <th style="width: 20%; text-align: right">Nome do Passeio</th>
            <th style="width: 10%; text-align: center">Categoria</th>
            <th style="width: 17%; text-align: left">Atrativo</th>
            <th style="width: 20%; text-align: left">Site Institucional</th>
            <th style="width: 16.5%;"></th>
          </tr>
          <% @tours.each do |tour| %>
            <tr>
              <td></td>
              <td style="text-align: right"><%= link_to tour.name, tour_path(tour) %></td>
              <td style="text-align: center"><%= link_to tour.category.name, category_path(tour.category.id) %></td>
              <td style="text-align: left"><%= tour.attraction %></td>
              <td style="text-align: left"><%= tour.site? ? link_to(tour.site, tour.site) : link_to('Ver Detalhes', tour_path(tour)) %></td>
              <td></td>
           </tr>
          <% end %>
        </table>
      </div>
      <br/>
      <div class="row" style="text-align: center">
          <div class="col-lg-12">
              <p>&copy; VivaBonito - Campus Code - <a href="https://campuscode.com.br/imersao-web">Imersão Web<a></p>
          </div>
      </div>
    </footer>

    <!-- jQuery -->
    <script src="js/jquery.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>
  </body>
</html>
