<div class="panel panel-default">
  <div class="panel-body">
    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
      <div class="row">
        <div class="col-sm-12">
          <table width="100%" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="prices-table" role="grid" aria-describedby="dataTables-example_info" style="width: 100%;">
            <thead>
              <tr role="row">
                <th style="vertical-align: middle;" tabindex="0" aria-controls="dataTables-example" rowspan="2" colspan="1" aria-label="Rendering engine: activate to sort column descending" aria-sort="ascending">Passeio</th>
                <th style="vertical-align: middle;" tabindex="0" aria-controls="dataTables-example" rowspan="2" colspan="1" aria-label="Browser: activate to sort column ascending">Início</th>
                <th style="vertical-align: middle;" tabindex="0" aria-controls="dataTables-example" rowspan="2" colspan="1" aria-label="Platform(s): activate to sort column ascending">Fim</th>
                <th style="vertical-align: middle;" tabindex="0" aria-controls="dataTables-example" rowspan="2" colspan="1" aria-label="Platform(s): activate to sort column ascending">Temporada</th>
                <th class="text-center" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="3" aria-label="Engine version: activate to sort column ascending">Preços</th>
                <th class="text-center" style="vertical-align: middle;" tabindex="0" aria-controls="dataTables-example" rowspan="2" colspan="1" aria-label="Engine version: activate to sort column ascending">Ações</th>
                <tr>
                  <th class="text-center">Adulto</th>
                  <th class="text-center">Criança</th>
                  <th class="text-center">Bebê</th>
                </tr>
              </tr>
            </thead>
            <tbody>
              <% @prices.each do |price| %>
                <tr class="gradeA odd" role="row">
                  <td> <%= price.tour.name %> </td>
                  <td> <%= l(price.start_date) %> </td>
                  <td> <%= l(price.end_date) %> </td>
                  <td> <%= price.adult_price %> </td>
                  <td> <%= price.child_price %> </td>
                  <td> <%= price.baby_price %> </td>
                  <td class="text-center">
                    <%= link_to edit_admin_price_path(price) do %>
                      <i class="fa fa-edit fa-fw"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <!-- /.table-responsive -->
  </div>
  <!-- /.panel-body -->
</div>
