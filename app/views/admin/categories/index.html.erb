<table class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="categories-table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Data de Atualização</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td width="25%"><%= category.id %></td>
        <td width="50%"><%= category.name %></td>
        <td width="25%"><%= l(category.updated_at, format: :short) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
