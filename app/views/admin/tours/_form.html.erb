<%= simple_form_for([:admin, @tour]) do |f| %>
  <p><%= flash[:notice] %></p>
  <%= f.input :name, label: 'Nome' %>
  <%= f.input :description, label: 'Descrição' %>
  <%= f.association :category, label: 'Categoria' %>
  <%= f.input :attraction, label: 'Atrativo' %>
  <%= f.input :duration, label: 'Duração' %>
  <%= f.input :distance, label: 'Distância' %>
  <%= f.input :site, label: 'Site' %>
  <%= f.submit txt_submit %>
<% end %>
