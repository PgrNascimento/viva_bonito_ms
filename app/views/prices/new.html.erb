<%= simple_form_for @price do |f|%>
  <%= f.association :tour, label: 'Passeio' %>
  <%= f.input :start_date, label: 'Data Inicial', as: :string %>
  <%= f.input :end_date, label: 'Data Final', as: :string %>
  <%= f.input :adult_price, label: 'Preço por Adulto' %>
  <%= f.input :child_price, label: 'Preço por Criança' %>
  <%= f.input :baby_price %>
  <%= f.input :season_type, label: 'Temporada', as: :radio_buttons, collection: @season_types, label_method: :label, value_method: :value %>
  <%= f.submit 'Criar Preço' %>
<% end %>
