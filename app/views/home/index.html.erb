<%= form_tag(home_filter_period_path, method: :get) do %>

  <%= label_tag :filter_from, 'Desde:' %>
  <%= text_field_tag :filter_from, @from, :class => "form-control datepicker", :placeholder => "Desde" %>

  <%= label_tag :filter_to, 'Até:' %>
  <%= text_field_tag :filter_to, @to, :class => "form-control datepicker", :placeholder => "Até" %>

  <%= submit_tag "Ver Preços" %>

<% end %>

<h2><%= "Preços para o período entre #{@from} e #{@to}" %></h2>

